<p id="notice"><%= notice %></p>
<div class="row">

          <div class="large-3 columns">
            <h3>Theme Name <!-- <%= @subtheme.theme_id %> --></h3>

            <h3 class="show-for-small"><%= @subtheme.name %><hr/></h3>
 
            <div class="panel">
              <h4 class="hide-for-small"><%= @subtheme.name %><hr/></h4>
              <h5 class="subheader"><%= @subtheme.description %></h5>
              
              <p>
                <h6>Download the Flashcard and Worksheet PDFs</h6>
                <ul>
                <% @subtheme.documents.each do |d| %>
                  <li><%= link_to d.description, d.url %></li>
                <% end %>
                </ul>
              </p>
              
            </div>
          </div>
          
          <div class="large-6 columns">
 
            <img src="<%= @subtheme.image %>"><br>
 
          </div>
          
</div>

<div class="row">
  <ul>
    <% @subtheme.words.each do |w| %>
      <li><%= link_to w.text_english, word_path(w) %></li>
    <% end %>
  </ul>
  
</div>


