<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @subtheme.name %>
</p>

<p>
  <b>Description:</b>
  <%= @subtheme.description %>
</p>

<p>
  <b>Image:</b>
  <%= @subtheme.image %>
</p>

<p>
  <b>Video url:</b>
  <%= @subtheme.video_url %>
</p>

<p>
  <b>Theme:</b>
  <%= @subtheme.theme_id %>
</p>

<p>
  <b>Words:</b>
  <ul>
    <% @subtheme.words.each do |w| %>
      <li><%= link_to w.text_english, word_path(w) %></li>
    <% end %>
  </ul>
</p>

<p>
  <b>Documents:</b>
  <ul>
  <% @subtheme.documents.each do |d| %>
    <li><%= link_to d.description, d.url %></li>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_subtheme_path(@subtheme) %> |
<%= link_to 'Back', subthemes_path %>
