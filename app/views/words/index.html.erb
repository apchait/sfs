<h1>Listing words</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Description</th>
    <th>Text image</th>
    <th>Image</th>
    <th>Audio</th>
    <th>Pdf</th>
    <th>Subtheme</th>
    <th>Language</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.text %></td>
    <td><%= word.description %></td>
    <td><%= word.text_image %></td>
    <td><%= word.image %></td>
    <td><%= word.audio %></td>
    <td><%= word.pdf %></td>
    <td><%= word.subtheme_id %></td>
    <td><%= word.language_id %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

