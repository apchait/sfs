                <h6 class="subheader"><%= @word.text_image %></h6>
                <h6 class="subheader"><%= @word.description %></h6>
                <p>
                  Subtheme: <%= @word.subtheme_id %>
                </p>
                <%= link_to @word.pdf, @word.pdf, :class => "small button" %>
              </div>
            </div>
          </div>

</div>

