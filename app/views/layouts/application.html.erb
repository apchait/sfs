<body>
<!-- Header and Nav -->
	<div class="row">
    <div class="large-5 columns">
      <h1 style="float:left"><img src="http://www.sfslanguages.com/wp-content/themes/monochrome/img/logo.gif" width='50px' height='50px' /></h1>
      <h5 class="subheader" style="margin-t0p: 30px">SFS Languages by Matt Schartow</h5>
  	</div>
    <div class="large-7 columns">
      <ul class="right button-group">
    	<li><a href="#" class="button" data-dropdown="languages-dropdown">Languages</a></li>
    	<!-- Languages Dropdown -->
    	<ul id="languages-dropdown" class="f-dropdown">
  		  <li><a href="#">This is a link</a></li>
  		  <li><a href="#">This is another</a></li>
  		  <li><a href="#">Yet another</a></li>
		</ul>
    	<!-- End Languages Dropdown -->
    	<li><a href="#" class="button">Schools</a></li>
    	<li><a href="#" class="button">Foundations</a></li>
    	<li><a href="#" class="button">About</a></li>
    	</ul>
     </div>
   </div>
<!-- End Header and Nav -->
  <%= yield %>
  
  <%= javascript_include_tag "application" %>
</body>
</html>